<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_gravity="right"
    android:padding="15dp"
    android:gravity="right"
    android:weightSum="6"
    android:layout_height="wrap_content">

    <TextView
        android:layout_weight="5"
        android:textColor="#fff"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Karga Karga Takımlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_weight="1"
        android:id="@+id/iv_loading"
        android:visibility="invisible"
        android:src="@drawable/loading"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

</LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="1. Aşama"
        android:padding="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_step1_1"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Green"
            android:text="Inovatimliler"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_step1_2"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Inovatimli Olmayanlar"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@color/DarkCyan"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="2. Aşama"
        android:padding="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_step2"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Inovatim Harici Takım/Topluluk Sayısı"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@color/DarkCyan"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



    <ListView
        android:visibility="gone"
        android:id="@+id/ly_sorted_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>